#!/bin/bash

[ "$#" -eq 0 ] && echo "Error: Input process to kill" && echo "Example: killparallel gdc-client " && exit 1
name=$1
cmd="ps aux |grep -iE \"${name}\"|grep -v  grep |awk '{print \$2}'|parallel kill -9"
echo $cmd
eval $cmd

